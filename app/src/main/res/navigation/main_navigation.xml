<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_navigation"
    app:startDestination="@id/allCollectionsScreen">

    <fragment
        android:id="@+id/allCollectionsScreen"
        android:name="com.kodatos.albumcollector.collection.ui.AllCollectionsScreen"
        android:label="AllCollectionsScreen">
        <action
            android:id="@+id/add_collection"
            app:destination="@id/addCollectionDialog"
            app:restoreState="true"
            />
    </fragment>

    <dialog
        android:id="@+id/addCollectionDialog"
        android:name="com.kodatos.albumcollector.collection.ui.AddCollectionDialog"
        android:label="AddCollectionDialog">
        <argument
            android:name="action"
            app:argType="com.kodatos.albumcollector.collection.models.AddCollectionAction"
            />
    </dialog>
</navigation>